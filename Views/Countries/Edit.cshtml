@model CountryWebApp.Models.Country

@{
    ViewData["Title"] = "Edit Country";
}

<h1 class="mb-4">Edit Country: @Model.Name</h1>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Capital" class="form-label"></label>
        <input asp-for="Capital" class="form-control" />
        <span asp-validation-for="Capital" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Population" class="form-label"></label>
        <input asp-for="Population" class="form-control" type="number" />
        <span asp-validation-for="Population" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Save Changes</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}