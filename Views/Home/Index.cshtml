@using CountryWebApp.Helpers
@model PaginatedList<CountryWebApp.Models.Country>
@{
    ViewData["Title"] = "Countries and cities";
}

<h1 class="mb-4">Countries and cities</h1>

@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-controller="Countries" asp-action="Create" class="btn btn-success">Add country</a>
        <a asp-controller="Cities" asp-action="Create" class="btn btn-primary">Add city</a>
    </p>
}
else
{
    <div class="alert alert-info">
        <strong>Only logged in users</strong> can add or edit.
        <a asp-area="Identity" asp-page="/Account/Login">Login</a> |
        <a asp-area="Identity" asp-page="/Account/Register">Registration</a>
    </div>
}

<div class="row">
    @foreach (var country in Model)
    {
        <div class="col-md-12 mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        @country.Name <small class="text-muted">(@country.Capital)</small>
                    </h5>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div>
                            <a asp-controller="Countries" asp-action="Edit" asp-route-id="@country.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-controller="Countries" asp-action="Delete" asp-route-id="@country.Id" class="btn btn-sm btn-danger">Delete</a>
                        </div>
                    }
                </div>
                <div class="card-body">
                    <p><strong>Population:</strong> @country.Population.ToString("N0") people</p>

                    @if (country.Cities.Any())
                    {
                        <h6>Cities:</h6>
                        <ul class="list-group list-group-flush">
                            @foreach (var city in country.Cities)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @city.Name
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <div>
                                            <a asp-controller="Cities" asp-action="Edit" asp-route-id="@city.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                            <a asp-controller="Cities" asp-action="Delete" asp-route-id="@city.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                        </div>
                                    }
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No cities added.</p>
                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Cities" asp-action="Create" asp-route-countryId="@country.Id" class="btn btn-sm btn-outline-primary mt-2">
                            Add city in @country.Name
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</div>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)">Previous</a>
        </li>

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
            </li>
        }

        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)">Next</a>
        </li>
    </ul>
</nav>